@model IEnumerable<GestaoCompras.Domain.Entities.Unidade>
@{
    ViewBag.Title = "Lista de Unidades";
}

<h2>Cadastro de Unidades</h2>

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <strong>@ViewBag.Title</strong>
    </div>
    <table class="table table-hover">
        <tr class="panel-heading">
            <th>
                @Html.DisplayNameFor(model => model.NomeUnidade)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeUnidade)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Unidades", new {id = item.UnidadeId})" class="btn btn-default"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Details", "Unidades", new {id = item.UnidadeId})" class="btn btn-default"><span title="Detalhes" class="glyphicon glyphicon-search"></span></a>
                    <a href="@Url.Action("Delete", "Unidades", new {id = item.UnidadeId})" class="btn btn-danger"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }

    </table>
</div>

<div>
    <div class="form-group">
        @Html.ActionLink("Inserir", "Create", "Unidades", null, new { @class = "btn btn-primary" })
    </div>
</div>

