@model IEnumerable<GestaoCompras.Domain.Entities.Produto>
@{
    ViewBag.Title = "Lista de Produtos";
}

<h2>Cadastro de Produtos</h2>

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <strong>@ViewBag.Title</strong>
    </div>
    <table class="table table-hover">
        <tr class="panel-heading">
            <th>
                @Html.DisplayNameFor(model => model.NomeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClasseProduto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unidade.NomeUnidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClasseProduto.NomeClasse)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Produtos", new { id = item.ProdutoId })" class="btn btn-default"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Details", "Produtos", new { id = item.ProdutoId })" class="btn btn-default"><span title="Detalhes" class="glyphicon glyphicon-search"></span></a>
                    <a href="@Url.Action("Delete", "Produtos", new { id = item.ProdutoId })" class="btn btn-danger"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }

    </table>
</div>

<div>
    <div class="form-group">
        @Html.ActionLink("Inserir", "Create", "Produtos", null, new { @class = "btn btn-primary" })
    </div>
</div>

