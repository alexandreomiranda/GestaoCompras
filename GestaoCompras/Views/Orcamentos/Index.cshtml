@model IEnumerable<GestaoCompras.Domain.Entities.Orcamento>
@{
    ViewBag.Title = "Lista de Orcamentos";
}

<h2>Gestão de Orçamentos</h2>

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <strong>@ViewBag.Title</strong>
    </div>
    <table class="table table-hover">
        <tr class="panel-heading">
            <th>
                @Html.DisplayNameFor(model => model.NumeroOrcamento)
                @Html.DisplayNameFor(model => model.DataOrcamento)
                @Html.DisplayNameFor(model => model.DataValidadeOrcamento)
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroOrcamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataOrcamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataValidadeOrcamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Orcamentos", new {id = item.OrcamentoId})" class="btn btn-default"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Details", "Orcamentos", new { id = item.OrcamentoId })" class="btn btn-default"><span title="Detalhes" class="glyphicon glyphicon-search"></span></a>
                    <a href="@Url.Action("Delete", "Orcamentos", new { id = item.OrcamentoId })" class="btn btn-danger"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }

    </table>
</div>

<div>
    <div class="form-group">
        @Html.ActionLink("Inserir", "Create", "Orcamentos", null, new { @class = "btn btn-primary" })
    </div>
</div>

